---
import Layout from "../../layouts/Layout.astro";
import jpg from "../../assets/images/1.jpg";
import { SeoEnd, SeoMeta } from "./tags";
import PageHero from "../../components/Hero/PageHero.astro";
import aboutImg3 from "../../assets/images/about-4-dot-1.png";
import CtaSection1 from "../../sections/CtaSection1.astro";
---

<Layout
  title="Jeffrey Simone Chadwick - Investment Adviser / Broker"
  ,
  Meta={SeoMeta}
  End={SeoEnd}
>
  <PageHero title="Brokers" mainText="Jeffrey Chadwick" />

  <section class="about-company-section">
    <div class="container-fluid">
      <!-- 1 -->
      <div class="about-section-column">
        <div class="section-wrap">
          <div class="items-1">
            <div class="wrapper">
              <p>About Jeffrey Chadwick</p>
              <h2>Founder and ceo of QTFx</h2>
            </div>
          </div>
          <!--  -->
          <div class="items-3">
            <div class="wrapper">
